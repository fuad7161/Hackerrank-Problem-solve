#include <bits/stdc++.h>
using namespace std;



int main(int argc, char const *argv[])
{

    int n;
    while(scanf("%d", &n)!=EOF){

    if(n<3)
    {
        if(n==1)
        cout<<n<<endl;
    else
        cout<<n-1<<endl;
    }
    else{
    int x =n,y=1,i=1;
    while(y<x)
    {
        i++;
         y = pow(2,i);
    }
    i--;
    int z = pow(2,i); 
    int x1 = n-z;
    cout<<x1*2<<endl;
    }

    }
    return 0;
}
